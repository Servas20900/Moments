# ================================
# PRODUCCIÓN - MOMENTS (TEMPLATE)
# ================================
# Copia este archivo a .env.production y configura los valores

NODE_ENV=production

# ================================
# BACKEND
# ================================
PORT=3000

# ================================
# BASE DE DATOS - DIGITALOCEAN
# ================================
POSTGRES_USER=doadmin
POSTGRES_PASSWORD=TU_PASSWORD_AQUI
POSTGRES_DB=defaultdb
POSTGRES_HOST=tu-database.db.ondigitalocean.com
POSTGRES_PORT=25060
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require"

# ================================
# JWT - CAMBIAR ESTOS VALORES
# ================================
# Genera con: openssl rand -base64 32
JWT_SECRET=cambiar-por-secreto-seguro
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=cambiar-por-secreto-seguro
JWT_REFRESH_EXPIRATION=30d

# ================================
# URLS
# ================================
# Cambiar por tu dominio de producción
FRONTEND_URL=https://tu-dominio.com
VITE_API_URL=https://api.tu-dominio.com

# ================================
# CLOUDINARY
# ================================
CLOUDINARY_CLOUD_NAME=tu-cloud-name
CLOUDINARY_API_KEY=tu-api-key
CLOUDINARY_API_SECRET=tu-api-secret

# ================================
# EMAIL
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-app-password
COMPANY_EMAIL=contact@momentswrld.com

# ================================
# OTROS
# ================================
SINPE_PHONE=8703-2112
FILE_UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=5242880

# Contraseña admin inicial (cambiar después del primer deploy)
ADMIN_DEFAULT_PASSWORD=CambiarDespuesDelDeploy123!
