# ================================
# ENTORNO
# ================================
NODE_ENV=development
PORT=3000

# ================================
# BASE DE DATOS
# ================================
DATABASE_URL="postgresql://moments_user:YOUR_STRONG_PASSWORD@localhost:5432/moments_db"

# Variables para Docker Compose (opcional)
POSTGRES_USER=moments_user
POSTGRES_PASSWORD=YOUR_STRONG_PASSWORD_HERE
POSTGRES_DB=moments_db
POSTGRES_PORT=5432

# ================================
# JWT - CRÍTICO PARA SEGURIDAD
# ================================
# Genera valores seguros con: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MIN_32_CHARS
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_SECURE_RANDOM_STRING
JWT_REFRESH_EXPIRATION=30d

# ================================
# FRONTEND
# ================================
FRONTEND_URL=http://localhost:5173

# ================================
# CLOUDINARY (Gestión de imágenes)
# ================================
# Obtén tus credenciales en: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ================================
# FILE UPLOAD
# ================================
FILE_UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# ================================
# EMAIL - SMTP (Gmail recomendado)
# ================================
# Para Gmail habilita "App Password" en tu cuenta y usa smtp.gmail.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_gmail_account@gmail.com
SMTP_PASS=your_app_password_here
COMPANY_EMAIL=contact@momentswrld.com
ADMIN_EMAIL=contact@momentswrld.com
SINPE_PHONE=8703-2112

# ================================
# SEED DATA
# ================================
# Contraseña del usuario admin creado por el seed
# IMPORTANTE: Cambia esto en producción
ADMIN_DEFAULT_PASSWORD=YourSecureAdminPassword123!

# ================================
# SENTRY
# ================================
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
